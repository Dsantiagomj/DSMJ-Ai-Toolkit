# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.md text
*.js text
*.ts text
*.json text
*.yml text
*.yaml text
*.sh text
*.bash text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

# Mark shell scripts as executable
*.sh text eol=lf
bin/dsmj-ai text eol=lf
install.sh text eol=lf
uninstall.sh text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
